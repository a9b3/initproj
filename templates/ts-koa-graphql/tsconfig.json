{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "lib": [
      "es6",
      "esnext.asynciterable",
      "es2017.object"
    ],
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}

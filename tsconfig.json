{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
